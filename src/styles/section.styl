.section
	background-color $section-background-color
	color $text-color
	border-radius ($unit / 2)

.section--with-bevel
	.section__content
		padding 0
		align-items stretch

.section__content
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items center
	padding ($unit / 2) $unit

.section__content--beveled
	padding 0

.section__title
	height $unit
	letter-spacing 1px
	background-color $section-title-background-color
	border-top-left-radius inherit
	border-top-right-radius inherit
	padding-bottom $unit
	font-family monospace
	padding-left ($unit /2.5)
	user-select none
