// Units
$unit = 1rem
$negative-unit = -1rem

// Basic layouting
$hair-space = ($unit / 32)
$negative-hair-space = ($unit / 32)

// Panel
$panel-margin = $unit

// Keyboard
$lower-key-height = 3 * $unit
$lower-key-width = $unit
$higher-key-height = 1.5 * $unit
$higher-key-width = $unit / 2
$higher-key-left-margin = .25 * $negative-unit

// Information bar
$information-bar-height = 2 * $unit
