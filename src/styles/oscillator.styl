.oscillators__osc1,
.oscillators__osc2,
.oscillators__extra
	display flex
	text-align center
	padding-top ($unit / 2)
	padding-bottom ($unit / 2)

.oscillators__osc1,
.oscillators__osc2
	justify-content space-around

.oscillators__osc1
	flex-direction column
	width 35%
	border-right solid 2px $section-title-background-color

.oscillators__osc2
	flex-direction row
	flex-wrap wrap
	width 65%

	.knob,
	.option-picker
		width 50%
	
	.oscillators__label
		width 100%

.oscillators__extra
	flex-grow 2
	justify-content space-around
	border-top solid 2px $section-title-background-color

.oscillators__label
	font-weight bold
	text-align center
	color $section-title-background-color
	font-size 140%
	user-select none
	bottom 0
