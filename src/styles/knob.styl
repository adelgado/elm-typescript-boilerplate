$knob-size = 48px
$knob-inner-size = ($knob-size - ($knob-size / 6))
$knob-inner-distance = ($knob-size / 12)

$knob-darker = #6E6E82
$knob-lighter = #485A7B
$knob-indicator = white

@import './mixins'

.knob
	text-align center

.knob__scale
	height $knob-size
	width $knob-size
	margin-left auto
	margin-right auto
	margin-bottom 2px

	background  url('../images/knob-bg.svg')
	background-size $knob-size
	background-repeat no-repeat
	background-position center

.knob__dial
	background  url('../images/knob-fg.svg')
	background-position center center
	background-repeat no-repeat
	background-size 100%
	user-select none
	width 100%
	height 100%

.knob__label
	panel-label($knob-label-background-color)
	margin-left auto
	margin-right auto
	white-space nowrap

.knob__adsr-label--attack
	background url('../images/attack.svg')

.knob__adsr-label--decay
	background url('../images/decay.svg')

.knob__adsr-label--sustain
	background url('../images/sustain.svg')

.knob__adsr-label--release
	background url('../images/release.svg')

.knob__adsr-label--attack,
.knob__adsr-label--decay,
.knob__adsr-label--sustain,
.knob__adsr-label--release
	width 2rem
	height 1.34rem
	margin-left auto
	margin-right auto
	margin-bottom -0.4rem
	background-position center center
	background-repeat no-repeat
	background-size 100%
