$knob-size = 48px
$knob-inner-size = ($knob-size - ($knob-size / 6))
$knob-inner-distance = ($knob-size / 12)

$knob-darker = #6E6E82
$knob-lighter = #485A7B
$knob-indicator = white

@import './mixins'

.knob
	position relative

.knob__scale
	height $knob-size
	width $knob-size

	background  url('../../images/knob-bg.svg')
	background-size 45px
	background-repeat no-repeat
	background-position center

.knob__dial
	position absolute
	top $knob-inner-distance
	left $knob-inner-distance
	height $knob-inner-size
	width $knob-inner-size

.knob__label
	panel-label($knob-label-background-color)
