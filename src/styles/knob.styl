$knob-size = 48px
$knob-inner-size = ($knob-size - ($knob-size / 6))
$knob-inner-distance = ($knob-size / 12)

$knob-darker = #6E6E82
$knob-lighter = #485A7B
$knob-indicator = white

@import './mixins'

.knob
	position relative

.knob__scale
	height $knob-size
	width $knob-size
	margin-left auto
	margin-right auto
	margin-bottom 2px

	background  url('../../images/knob-bg.svg')
	background-size $knob-size
	background-repeat no-repeat
	background-position center

.knob__dial
	margin 5px

.knob__label
	panel-label($knob-label-background-color)
