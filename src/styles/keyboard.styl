.keyboard
	.key
		margin 0
		padding 0
		list-style none
		position relative
		float left

		&:first-child
			border-radius 5px 0 5px 5px

		&:last-child
			border-radius 0 5px 5px 5px

		&.white
			height 16em
			width 2 * $unit
			z-index 1
			border-left 1px solid
			border-bottom 1px solid #bbb
			border-radius 0 0 5px 5px
			background linear-gradient(to bottom, #eee 0, #fff 100%)
			box-shadow -1px 0 0 rgba(255, 255, 255, .8) inset, 0 0 5px #ccc inset, 0 0 3px rgba(0,0,0, .2);

			&:active
				border-top 1px solid #777
				border-left 1px solid #999
				border-bottom 1px solid #999
				background  linear-gradient(to bottom, #fff 0, #e9e9e9 100%)
				box-shadow 2px 0 3px rgba(0,0,0, .1) inset, -5px 5px 20px rgba(0,0,0, .2) inset,0 0 3px rgba(0,0,0, .2)

		&.black
			margin 0 0 0 -1em
			height 4 * $unit
			width $unit
			z-index 2
			border 1px solid #000
			border-radius 0 0 3px 3px
			background linear-gradient(45deg, #222 0, #555 100%)
			box-shadow -1px -1px 2px rgba(255,255,255, .2) inset, 0 -5px 2px 3px rgba(0,0,0, .6) inset, 0 2px 4px rgba(0,0,0, .5)

			&:active
				background linear-gradient(to right, #444 0, #222 100%)
				box-shadow -1px -1px 2px rgba(255,255,255, .2) inset, 0 -2px 2px 3px rgba(0,0,0, .6) inset, 0 1px 2px rgba(0,0,0, .5)

	.a,
	.b,
	.e,
	.g,
	.f,
	.d,
	.c
		margin 0 0 0 -1em

	.e,
	.b
		margin-right 1em
