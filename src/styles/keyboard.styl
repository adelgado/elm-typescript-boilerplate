.keyboard
	margin $unit
	padding 0
	flex-grow 2
	display flex
	align-items flex-end
	justify-content center

	.key
		margin 0
		padding 0
		list-style none
		position relative
		float left

		&.lower
			height $lower-key-height
			width $lower-key-width

			border-left $hair-space solid
			border-bottom $hair-space solid $border-bottom-color
			background linear-gradient(to bottom, $key-gradient-from-color 0,  $key-gradient-to-color 100%)

			&.current-octave
				background $octave-highlight-color

			

			&:active
				border-top $hair-space solid $border-top-color
				border-left $hair-space solid $border-left-color
				border-bottom $hair-space solid $border-bottom-color
				background  linear-gradient(to bottom, $active-key-from-color 0, $active-key-to-color 100%)
				box-shadow 2px 0 3px rgba(0, 0, 0, .1) inset, -5px 5px 20px rgba(0, 0, 0, .2) inset,0 0 3px rgba(0, 0, 0, .2)
				background $octave-highlight-color

			&.pressed
				background  linear-gradient(to bottom, $active-key-from-color 0, $active-key-to-color 100%)
				box-shadow 2px 0 3px rgba(0,0,0, .1) inset, -5px 5px 20px rgba(0,0,0, .2) inset,0 0 3px rgba(0,0,0, .2)
				background $octave-highlight-color
			


		&.higher
			height $higher-key-height
			width $higher-key-width
			margin 0
			margin-bottom @height
			margin-left $higher-key-left-margin
			z-index 2
			border 1px solid $higher-key-border-color = #000
			background linear-gradient(45deg, #222 0, #555 100%)

			&.pressed
				background linear-gradient(to right, #444 0, #222 100%)
				box-shadow -1px -1px 2px rgba(255,255,255, .2) inset, 0 -2px 2px 3px rgba(0,0,0, .6) inset, 0 1px 2px rgba(0,0,0, .5)

			&:active
				background linear-gradient(to right, #444 0, #222 100%)
				box-shadow -1px -1px 2px rgba(255,255,255, .2) inset, 0 -2px 2px 3px rgba(0,0,0, .6) inset, 0 1px 2px rgba(0,0,0, .5)

		
		&.a,
		&.b,
		&.e,
		&.g,
		&.f,
		&.d,
		&.c
			margin 0
			margin-left -.25 * $lower-key-width

		&.e,
		&.b
			margin-right .25 * $lower-key-width

