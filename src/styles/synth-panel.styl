.synth-panel
	display flex
	justify-content space-around
	color $text-color
	background-color #291c2d
	border-radius $unit
	margin $unit


	&.panel-left-section
		background-color #b1b3cc
		width 100%


	&.panel-middle-section
		margin-left 0px
		margin-right 0px
		background-color #b1b3cc
		width 100%


	&.panel-right-section
		background-color #b1b3cc
		width 100%
