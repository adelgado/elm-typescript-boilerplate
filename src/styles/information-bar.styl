@import './mixins'

$midi-indicator-ok = #34c945
$midi-indicator-error = #ff4f4f
$midi-indicator-neutral = #a8a8a8

.information-bar
	display flex
	justify-content space-around
	align-items center
	width 100vw
	background-color rgba(0, 0, 0, .2)
	color $text-color
	font-family monospace
	padding ($unit / 2)

.information-bar__item,
.information-bar__gh-link,
.midi-indicator
	padding-right $unit
	padding-left $unit

.information-bar__gh-link
	height ($information-bar-height * .8)
	padding-top 7px
	background-image url('../images/github-icon.svg')
	background-repeat no-repeat
	margin-top 3px
	background-size 20px
	background-position center center
