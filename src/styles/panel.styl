.panel-controls
	display flex
	justify-content space-around
	color $text-color
	background-color $panel-background-color
	border-radius ($unit / 2)
	margin $unit
	padding $unit


.panel-controls__column
	flex-grow 1
	margin-right $unit

	&:last-of-type
		margin-right 0

	&:nth-of-type(2)
		.knob,
		.option-picker
			width 20%

		.switch
			width 40%

	.section
		margin-bottom $unit

		&:last-of-type
			margin-bottom 0
