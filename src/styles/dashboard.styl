$rack-border-shadow = #450202

.dashboard
	height 100vh
	width 100vw
	display flex
	flex-direction column
	box-shadow inset 3px 3px 10px 1px $rack-border-shadow
	justify-content space-between
	align-items center

	.virtual-keyboard
		margin-top auto


.dashboard__brand
	margin $unit
	margin-top 0
	padding $unit
	padding-top 0
	color $text-color
	margin-left auto
	font-size 4rem
	line-height 2.6rem
	overflow auto
	text-align justify

	:nth-of-type(1)
		font-family 'Poiret One', cursive
		font-size 1.5em
		font-weight bold
	
	:nth-of-type(2)
		font-family 'Audiowide', cursive
		color $brand-dark-color
	
	:nth-of-type(3)
		font-family 'Maven Pro', sans-serif
		display block
		font-size 30px
		letter-spacing 22px
		margin-right -20px

		&::after
			display inline-block
			width 100%
			content ''

